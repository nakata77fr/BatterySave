<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent">

	<EditText android:id="@+id/battery_life"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:hint="@string/battery_life"/>

	<EditText android:id="@+id/battery_status"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:hint="@string/battery_status"/>

	<EditText android:id="@+id/battery_is_charging"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:hint="@string/battery_is_charging"/>

	<EditText android:id="@+id/battery_is_charging_by_plug"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:hint="@string/battery_is_charging_by_plug"/>

	<EditText android:id="@+id/battery_is_charging_by_usb"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:hint="@string/battery_is_charging_by_usb"/>

	<EditText android:id="@+id/battery_is_charging_by_ac"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:hint="@string/battery_is_charging_by_ac"/>

	<SeekBar
			android:id="@+id/backlightcontrol"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10px"
			android:max="100"
			android:progress="50"/>

	<TextView
			android:id="@+id/backlightsetting"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="0.50"/>

	<Button
			android:id="@+id/updatesystemsetting"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="BRIGHTNESS"/>

	<Switch
			android:id="@+id/wifi_switch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="10dp"
			android:background="@android:color/background_dark"
			android:checked="false"
			android:text="Wi-Fi Settings"
			android:textColor="@android:color/white"
			android:textOff="OFF"
			android:textOn="ON"/>

	<Switch
			android:id="@+id/bluetoothSwitch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="10dp"
			android:background="@android:color/background_dark"
			android:checked="false"
			android:text="Bluetooth Settings"
			android:textColor="@android:color/white"
			android:textOff="OFF"
			android:textOn="ON"/>

</LinearLayout>

